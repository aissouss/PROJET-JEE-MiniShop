    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- MiniShop Global Scripts -->
    <script src="${pageContext.request.contextPath}/assets/js/theme.js"></script>
    <script src="${pageContext.request.contextPath}/assets/js/cart-local.js"></script>

    <!-- Custom JS (if needed) -->
    <script>
        // Auto-dismiss alerts after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                setTimeout(function() {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });
        });

        // Show guest cart info
        function showGuestCartInfo() {
            if (window.MiniShopGuestCart) {
                const cart = window.MiniShopGuestCart.get();
                const count = window.MiniShopGuestCart.getCount();

                let message = count > 0
                    ? `Vous avez ${count} article${count > 1 ? 's' : ''} dans votre panier invité. Connectez-vous pour finaliser votre commande.`
                    : 'Votre panier invité est vide. Ajoutez des produits depuis le catalogue !';

                window.MiniShopGuestCart.showNotification(message, count > 0 ? 'info' : 'warning');
            }
        }
    </script>
